@echo off
chcp 65001 > nul
title ОСТАНОВКА СИСТЕМЫ

echo.
echo ═══════════════════════════════════════════════════════════════════
echo    🛑 ОСТАНОВКА ВСЕЙ СИСТЕМЫ 🛑
echo ═══════════════════════════════════════════════════════════════════
echo.

echo Остановка Python серверов...
taskkill /F /IM python.exe /T 2>nul
if %errorlevel% == 0 (
    echo ✅ Python серверы остановлены
) else (
    echo ℹ️ Python серверы не запущены
)

echo.
echo Остановка Node.js серверов...
taskkill /F /IM node.exe /T 2>nul
if %errorlevel% == 0 (
    echo ✅ Node.js серверы остановлены
) else (
    echo ℹ️ Node.js серверы не запущены
)

echo.
echo ═══════════════════════════════════════════════════════════════════
echo    ✅ ВСЕ СЕРВИСЫ ОСТАНОВЛЕНЫ! ✅
echo ═══════════════════════════════════════════════════════════════════
echo.
pause

